<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    tools:context="rb.resumecareer.resumeDetail.ExperienceDetail" >

    <Button
        android:id="@+id/btnExperienceAddMore"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="30dp"
        android:background="@drawable/buttonstyle"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:text="@string/addexperience" />

    <ListView
        android:id="@+id/list_all_experience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_below="@id/btnExperienceAddMore"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/customshape"
        android:divider="#FFFFFF"
        android:dividerHeight="1dp"
        android:fadeScrollbars="true"
        android:fastScrollEnabled="true"
        android:scrollbarStyle="outsideOverlay"
        android:listSelector="#000000" >
    </ListView>

</RelativeLayout>